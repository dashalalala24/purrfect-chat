.chat-settings-menu {
  position: absolute;
  top: 100%;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 0.375rem;
  padding: 0.5rem;
  border-radius: 0.75rem;
  border: 1px solid var(--border);
  background: var(--card);
  box-shadow: var(--shadow-card);
  min-width: 14rem;
  z-index: 20;
}

.chat-settings-menu_hidden {
  display: none;
}

.chat-settings-menu .button {
  justify-content: flex-start;
  box-shadow: none;
}
